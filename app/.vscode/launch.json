    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "debug local",
            "runtimeArgs": [
                "-r", "ts-node/register"
            ],
            "args": [
                "${workspaceFolder}/index.ts"
            ],
            "envFile": "${workspaceFolder}/.env.development",
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "debug dev-local",
            "runtimeArgs": [
                "-r", "ts-node/register"
            ],
            "args": [
                "${workspaceFolder}/server.ts"
            ],
            "envFile": "${workspaceFolder}/.env.development",
        }
    ]
}